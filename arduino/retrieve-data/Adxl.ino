void adxl_init()  {
  Wire.beginTransmission(ADXL_ADR);
  Wire.write(ADXL_POWER_CTL);
  Wire.write(ADXL_POWER_CTL_V & 0b11110111);
  Wire.endTransmission();
  Wire.beginTransmission(ADXL_ADR);
  Wire.write(ADXL_INT_ENABLE);
  Wire.write(0);
  Wire.endTransmission();
  Wire.beginTransmission(ADXL_ADR);
  Wire.write(ADXL_OFSX);
  Wire.write(ADXL_OFSX_V);
  Wire.endTransmission();
  Wire.beginTransmission(ADXL_ADR);
  Wire.write(ADXL_OFSY);
  Wire.write(ADXL_OFSY_V);
  Wire.endTransmission();
  Wire.beginTransmission(ADXL_ADR);
  Wire.write(ADXL_OFSZ);
  Wire.write(ADXL_OFSZ_V);
  Wire.endTransmission();
  Wire.beginTransmission(ADXL_ADR);
  Wire.write(ADXL_BW_RATE);
  Wire.write(ADXL_BW_RATE_V);
  Wire.endTransmission();
  Wire.beginTransmission(ADXL_ADR);
  Wire.write(ADXL_INT_MAP);
  Wire.write(ADXL_INT_MAP_V);
  Wire.endTransmission();
  Wire.beginTransmission(ADXL_ADR);
  Wire.write(ADXL_DATA_FORMAT);
  Wire.write(ADXL_DATA_FORMAT_V);
  Wire.endTransmission();
  Wire.beginTransmission(ADXL_ADR);
  Wire.write(ADXL_FIFO_CTL);
  Wire.write(ADXL_FIFO_CTL_V);
  Wire.endTransmission();
  Wire.beginTransmission(ADXL_ADR);
  Wire.write(ADXL_INT_ENABLE);
  Wire.write(ADXL_INT_ENABLE_V);
  Wire.endTransmission();
  Wire.beginTransmission(ADXL_ADR);
  Wire.write(ADXL_POWER_CTL);
  Wire.write(ADXL_POWER_CTL_V);
  Wire.endTransmission();
}

